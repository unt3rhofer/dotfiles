#!bin/i3config
#FONT
font pango:Noto Sans 10

#WINDOW CUSTOMIZATION
#Catpuccin Mocha
set $background            #1e1e2e
set $active-border	       #cba6f7
set $inactive-bg           #181825
set $text          		   #cdd6f4
set $inactive-text 		   #6c7086
set $bar-active-ws-text    #cba6f7
set $bar-inactive-ws-text  #f5e0dc

#                        border          background      text            indicator
client.focused           $active-border  $active-border  $text           $active-border
client.unfocused         $inactive-bg    $inactive-bg    $inactive-text  $background
client.focused_inactive  $inactive-bg    $inactive-bg    $inactive-text  $background
client.urgent            $inactive-bg    $inactive-bg    $inactive-text  $background

default_border pixel 2

bar {
    status_command i3blocks
    position bottom
	strip_workspace_numbers yes
    colors {
        background $background
        statusline $text
        separator  $inactive-background

        # Color for focused window borders and indicators
        focused_workspace   $background $background $bar-active-ws-text
        active_workspace    $background $background $bar-inactive-ws-text
        inactive_workspace  $background $background $bar-inactive-ws-text
        urgent_workspace    $background $background $bar-inactive-ws-text
    }
}

#Gaps
gaps inner 7
gaps outer 5

#WALLPAPER
exec_always feh --bg-scale ~/Dotfiles/Wallpapers/wallpaper_samurai+temple.png

#TRANSPARENCY
exec_always picom
